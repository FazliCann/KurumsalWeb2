@model IEnumerable<KurumsalWeb2.Models.Model.Hizmet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmetler</h2>
<a class="btn btn-success" href="/Hizmet/Create/">Yeni Hizmet Ekle</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Açıklama</th>
            <th scope="col">ResimURL</th>
            <th scope="col">İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.HizmetId</th>
                <td>@item.Baslik</td>
                <td>@Html.Raw(@item.Aciklama)</td>
                <td><img width="100" height="100" src="@item.ResimURL" /></td>
                <td><a href="/Hizmet/Edit/@item.HizmetId">Düzenle</a>|<a href="/Hizmet/Delete/@item.HizmetId">Sil</a></td>

            </tr>

        }
        
   
    </tbody>
</table>