
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>
<h2>Hizmet Ekle</h2>

<div class="form">

    <form class="row g-3" method="post" action="/Hizmet/Create/" enctype="multipart/form-data">
        <div class="col-12">
            <label for="inputNanme4" class="form-label">Başlık</label>
            <input type="text" name="Baslik" class="form-control" id="Baslik" required>
        </div>
        <div class="col-12">
            <label for="inputEmail4" class="form-label">Açıklama</label>
            <textarea name="Aciklama" class="ckeditor" required></textarea>
        </div>
        <div class="col-12">
            <label for="inputPassword4" class="form-label">Resim</label>
            <input type="file" required class="form-control" id="ResimURL" name="ResimURL" accept=".png,.jpg,.jpeg" />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <button type="reset" class="btn btn-danger"><a href="/Hizmet/Index/">İptal</a></button>
        </div>
    </form><!-- Vertical Form -->
</div>

