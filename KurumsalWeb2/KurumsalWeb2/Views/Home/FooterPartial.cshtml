@using KurumsalWeb2.Helper

<footer id="footer" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">

    <div class="footer-newsletter">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h4>Kurumsal Web Sitesi Projesi</h4>

                </div>
                @*<div class="col-lg-6">
                        <form action="" method="post">
                            <input type="email" name="email"><input type="submit" value="Subscribe">
                        </form>
                    </div>*@
            </div>
        </div>
    </div>

    <div class="footer-top">
        <div class="container">
            <div class="row">

                <div class="col-lg-3 col-md-6 footer-links">
                    <h4>Menü</h4>
                    <ul>
                        <li><i class="bx bx-chevron-right"></i> <a href="/Home/Index/">Anasayfa</a></li>
                        <li><i class="bx bx-chevron-right"></i> <a href="/Home/Hakkimizda/">Hakkımızda</a></li>
                        <li><i class="bx bx-chevron-right"></i> <a href="/Home/Hizmetlerimiz/">Hizmetler</a></li>
                        <li><i class="bx bx-chevron-right"></i> <a href="/Home/Blog/">Blog</a></li>
                        <li><i class="bx bx-chevron-right"></i> <a href="/Home/Iletisim/">İletişim</a></li>
                    </ul>
                </div>


                @{
                    Html.RenderAction("IletisimPartial", "Home");
                }

                <div class="col-lg-3 col-md-6 footer-links">
                    <h4>Hizmetlerimiz</h4>
                    <ul>
                        @foreach (var item in ViewBag.Hizmetler)
                        {
                            <img src="@item.ResimURL" width="70" height="35" />
                        }
                    </ul>
                </div>


                <div class="col-lg-3 col-md-6 footer-info">
                    <h3>Son Blog Yazıları</h3>
                    <div class=" mt-3">
                        @foreach (var item in ViewBag.Blog)
                        {

                            <a href="/Blog/@SeoHelper.ToSeoUrl(item.Baslik).ToLower()-@item.BlogId"><i>@item.Baslik</i><br></a>

                        }
                    </div>

                </div>
                <div class="col-lg-3 col-md-6 footer-info">
                    <div class="social-links mt-3">
                        <a href="www.twitter.com/@ViewBag.Iletisim.Twitter" class="twitter"><i class="bx bxl-twitter"></i></a>
                        <a href="www.facebook.com/@ViewBag.Iletisim.Facebook" class="facebook"><i class="bx bxl-facebook"></i></a>
                        <a href="www.instagram.com/@ViewBag.Iletisim.Instagram" class="instagram"><i class="bx bxl-instagram"></i></a>

                    </div>
                </div>
            </div>

        </div>

    </div>

    <div class="container">
    </div>
    <div class="copyright">
        @DateTime.Now.Year &copy; <strong>Tüm Haklerı Gizlidir.<span></span></strong>
    </div>
