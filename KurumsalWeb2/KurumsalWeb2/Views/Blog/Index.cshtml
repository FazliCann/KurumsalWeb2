@model IEnumerable<KurumsalWeb2.Models.Model.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>

    $(document).ready(function () {
        $('#myTable').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json',
            },
        });
         
    });
</script>  

<h2>Blog Kayıtları</h2>

<a class="btn btn-secondary" href="/Blog/Create/">Yeni Blog</a><br>

<table class="table table-striped" id="myTable" >
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Kategori</th>
            <th scope="col">ResimURL</th>
            <th scope="col">İşlemler</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {

            <tr>
                <td>@item.BlogId</td>
                <td>@item.Baslik</td>
                <td>@item.Kategori.KategoriAd</td>
                <td><img src="@item.ResimURL" width="100" height="100" /></td>
                <td><a href="/Blog/Edit/@item.BlogId">Güncelle</a> | <a href="/Blog/Delete/@item.BlogId">Sil</a></td>
            </tr>
        }


    </tbody>
</table>

