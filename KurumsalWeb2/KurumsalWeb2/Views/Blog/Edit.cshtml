@model KurumsalWeb2.Models.Model.Blog
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

<h2>Kategori Düzenle</h2>


<div class="form">

    @*<form class="row g-3" method="post" action="/Blog/Create/" enctype="multipart/form-data">*@
    @using (Html.BeginForm("Edit", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-12">
            <label for="inputNanme4" class="form-label" required>Başlık</label>
            <input type="text" class="form-control" name="Baslik" id="Baslik" required value="@Model.Baslik">
        </div>
        <div class="col-12">
            <label for="inputEmail4" class="form-label">Kategori</label>
            @Html.DropDownList("KategoriId", null, new { @class = "form-control" })

        </div>
        <div class="col-12">
            <label for="inputPassword4" class="form-label">İçerik</label>
            <textarea class="ckeditor" name="Icerik">@Model.Icerik</textarea>
        </div>
        <div class="col-12">
            <label for="inputAddress" class="form-label"> Önceki Resim</label><br>
            <img  src="@Model.ResimURL"/>
        </div>
        <div class="col-12">
            <label for="inputAddress" class="form-label">Resim</label>
            <input type="file" class="form-control" name="ResimURL" id="ResimURL" accept=".jpg,.png,.jpeg" />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Ekle</button>
            <button type="reset" class="btn btn-danger"><a href="/Blog/Index/">İptal</a></button>
        </div>
        @*</form>*@
    }
    

    <!--</form>--><!-- Vertical Form -->
</div>
